<body>
  <div class="wrap">
    <div class="card" role="article" aria-label="Random Aesthetic Interior Photo">
      <div class="hero" id="hero">
        <div class="loading-shimmer" aria-hidden="true"></div>
        <img id="photo" alt="A random aesthetically pleasing interior or design photo" class="fade-in">
        <div class="overlay"></div>

        <div class="controls">
          <button class="btn" id="newBtn" title="Get a new photo (also press R)">⟳ New</button>
          <button class="btn" id="downloadBtn" title="Open image in new tab to download">⇩ Download</button>
          <button class="btn" id="toggleBlur" title="Toggle subtle parallax zoom">Zoom</button>
        </div>

        <div class="meta" id="meta">Keywords: <span id="kw">interior, design, cozy</span></div>
      </div>

      <div class="toolbar">
        <div class="left">
          <div class="title">Random Aesthetic Interiors</div>
          <div class="hint">Refresh or press <strong>R</strong> to change the photo</div>
          <div class="keywords" id="keywordPill">interior · cozy · modern</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Keywords to vary the Unsplash query. Tweak to taste.
    const keywordGroups = [
      ['interior','design','cozy'],
      ['minimal','interior','scandinavian'],
      ['modern','living room','interior'],
      ['bedroom','cozy','aesthetic'],
      ['kitchen','interior','stylish'],
      ['minimalist','workspace','design'],
      ['loft','industrial','interior'],
      ['vintage','interior','retro'],
      ['boho','interior','plants'],
      ['bathroom','spa','interior']
    ];

    const photo = document.getElementById('photo');
    const kw = document.getElementById('kw');
    const keywordPill = document.getElementById('keywordPill');
    const newBtn = document.getElementById('newBtn');
    const downloadBtn = document.getElementById('downloadBtn');
    const hero = document.getElementById('hero');
    const toggleBlur = document.getElementById('toggleBlur');

    let zoomEnabled = false;

    function pickKeywords(){
      const set = keywordGroups[Math.floor(Math.random()*keywordGroups.length)];
      return set.join(',');
    }

    function loadRandom(){
      // show shimmer
      hero.classList.add('loading');
      photo.classList.remove('visible');
      const keywords = pickKeywords();
      const encoded = encodeURIComponent(keywords);
      // source.unsplash.com will redirect to a photo matching the query
      // add sig to bypass cache
      const url = `https://source.unsplash.com/1600x900/?${encoded}&sig=${Date.now()}`;
      kw.textContent = keywords;
      keywordPill.textContent = keywords.replace(/,/g,' · ');
      // start loading
      photo.src = url;
      // When the image finishes loading, reveal it with a fade.
      photo.onload = ()=>{
        hero.classList.remove('loading');
        requestAnimationFrame(()=>{
          photo.classList.add('visible');
        });
      };
      photo.onerror = ()=>{
        hero.classList.remove('loading');
        // fallback to a tiny embedded SVG to avoid broken UI
        photo.src = 'data:image/svg+xml;utf8,' + encodeURIComponent(`<svg xmlns=\'http://www.w3.org/2000/svg\' width=\'1600\' height=\'900\'><rect width=\'100%\' height=\'100%\' fill=\'#0b1220\'/><text x=\'50%\' y=\'50%\' dominant-baseline=\'middle\' text-anchor=\'middle\' fill=\'#9aa6bd\' font-family=\'Arial\' font-size=36>No image available</text></svg>`);
      };

      // Update download link
      downloadBtn.onclick = ()=>{
        // open the raw image URL in a new tab so user can download/inspect
        window.open(photo.src, '_blank', 'noopener');
      };
    }

    // keyboard shortcut
    document.addEventListener('keydown', (e)=>{
      if(e.key.toLowerCase() === 'r') loadRandom();
    });

    newBtn.addEventListener('click', loadRandom);

    toggleBlur.addEventListener('click', ()=>{
      zoomEnabled = !zoomEnabled;
      if(zoomEnabled){
        photo.style.transition = 'transform 12s linear';
        photo.style.transform = 'scale(1.08)';
        toggleBlur.textContent = 'Zoom ✓';
      } else {
        photo.style.transform = 'scale(1)';
        toggleBlur.textContent = 'Zoom';
      }
    });

    // load first image
    loadRandom();
  </script>
</body>
</html>
